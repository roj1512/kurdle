
@import "../variables"

button
    align-items center
    background-color dark-2
    border none
    border-radius border-radius
    color inherit
    cursor pointer
    display flex
    flex 1
    font-size 100%
    font-weight bold
    height 58px
    justify-content center
    padding 0
    transition-duration 250ms

    &:active, &.excl
        background-color dark-3

    &.incl
        background-color yellow